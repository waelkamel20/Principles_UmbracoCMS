@using Principles_UmbracoCMS.Controllers


@{

}


@using (Html.BeginUmbracoForm<ContactUsController>("HandleAddContactUs", null, new { @class = "needs-validation", @novalidate = "" }))
{
    <div class="form-group">
        <input name="FullName" type="text" class="form-control-input" maxlength="100" placeholder="Name" required>
    </div>
    <div class="form-group">
        <input name="Email" type="email" class="form-control-input" maxlength="100" placeholder="Email" required>
    </div>
    <div class="form-group">
        <textarea name="Message" class="form-control-textarea" maxlength="300" placeholder="Message" required></textarea>
    </div>
    <div class="form-group">
        <button type="submit" class="form-control-submit-button fs-5">أرسال</button>
    </div>
}